{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strict": true,

        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "nodenext",

        "rootDir": "./src",
        "outDir": "./build",

        "ignoreDeprecations": "6.0",

        "baseUrl": "./src", 
        "paths": {
            "#interfaces": ["./utils/interfaces/index.ts"],
            "#colors": ["./utils/chalk/colors.ts"],
            "#functions": ["./utils/functions/index.ts"],
            "#controllers/*" : ["./controllers/*"]
        }

    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
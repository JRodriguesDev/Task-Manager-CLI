{
  "name": "task-manager-cli",
  "description": "Um gerenciador de tarefas simples feito em TypeScript, executado direto no terminal.",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx --env-file=.env src/index.ts",
    "start": "node --env-file=.env ."
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.9.0",
    "@inquirer/select": "^4.4.0",
    "bcryptjs": "^3.0.2",
    "chalk": "^5.6.2",
    "inquirer": "^12.10.0"
  },
  "imports": {
    "#interfaces": [
      "./build/utils/interfaces/index.js"
    ],
    "#colors": [
      "./build/utils/chalk/colors.js"
    ],
    "#functions": [
      "./build/utils/functions/index.js"
    ],
    "#controllers/*": [
      "./build/controllers/*"
    ],
    "#clis" : [
      "./build/clis/index.js"
    ],
    "#models/*": [
      "./build/models/*"
    ]
  }
}
